<article>
  <header>
    <h1>
      <a href="/posts/<%= title.gsub(" ", "-") if title %>"><%= title %></a>
    </h1>
  </header>
  <hr>
  <div id='post'>
    <div>
      <%= body %>
    </div>
  </div>
  <footer>
  <p> <%= date %> | <%= tags.map { |tag|  "<a href='" + url("tagged/" + tag) + "'>#{tag}</a> " } %> </p>
  </footer>
</article>

